@model List<CategoryViewModel>

<div class="box-cat-prod px-3">
    <div class="row">
        <div class="py-4 px-5 w-100 position-relative">
            <div class="d-inline-block w-100">
                <span class="d-inline-block section-title mt-1 mb-2">دسته بندی کالاها</span>
                <div class="d-inline-block btn-show-all btn-show-all-light">
                    <a id="#" href="#">
                        مشاهده همه
                        <img src="/images/ArrowIcon.png">
                    </a>
                </div>
            </div>

            <div class="w-100 mt-3">
                <div class='swiper-container ' id='swiper03'>
                    <div class="swiper-wrapper">
                        @if (Model == null || Model.Count == 0)
                        {
                            <p class="text-center">
                                داده ای موجود نیست
                            </p>
                        }
                        else
                        {
                            @foreach (CategoryViewModel item in Model)
                            {
                                <div class="swiper-slide" data-wow-delay="0.2s">
                                    <div class="item-cat-prod">
                                        <figure>
                                            <a href="#"><img src="@item.ImageListPat" class="p-2" /></a>
                                        </figure>
                                        <div class="p-3">
                                            <h3><a href="#">@item.Name</a></h3>
                                            <div>بیش از<span>@item.ProductsCount</span>محصول</div>
                                            <div class="mt-2">بیش از<span>@item.StoresCount</span>فروشگاه</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class='swiper-button-next' id='swiper-button-next03'></div>
                <div class='swiper-button-prev' id='swiper-button-prev03'></div>
            </div>
        </div>
    </div>
</div>