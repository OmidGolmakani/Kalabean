@{
    ViewData["Title"] = "مجتمع های تجاری";
}
@model ShoppingCentersModel

<section class="py-2">
    <div class="shopping-center-banner">
        <!--<img src="images/temp/ShoppingCenter.png"  class="w-100 img-fluid"/>-->
    </div>
</section>

<div class="container-fluid">

    <section class="py-5">
        <div class="--container">
            <div class="row offset-md-1">
                @if (Model.Types != null)
                {
                    @foreach (ShoppingCenterTypeModel type in Model.Types)
                    {
                        <div class="col-12 col-md-2 col-sm-6 my-2">
                            <div class="text-center">
                                <a href="@Url.ShoppingCenters(type.Name, type.Id)" class="shopping-center-a">
                                    <span><i class="fa fa-check"></i></span>
                                    @type.Name
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
    @if (Model?.ShoppingCenters != null && Model.ShoppingCenters.Count > 0)
    {
        <section class="py-2">
            <div class="row">
                @foreach (ShoppingCenterViewModel sh in Model.ShoppingCenters)
                {
                    <div class="col-12 col-md-4">
                        <div class="item-cat-prod shopping-center-div">
                            <figure class="position-relative">
                                <a href="@Url.ShoppingCenter(sh.TypeName, sh.TypeId, sh.Name, sh.Id)">
                                    <img src="@sh.ImagePath" class="rounded-top img-fluid w-100" style="width:475px; height:235px;" />
                                    <div class="store-number">
                                        <span class="Count">@sh.StoresCount</span>
                                        <span class="store-name">فروشگاه</span>
                                    </div>
                                </a>
                            </figure>
                            <div class="p-3 position-relative">
                                <h3><a href="@Url.ShoppingCenter(sh.TypeName, sh.TypeId, sh.Name, sh.Id)" class="border-0 pb-0">@sh.Name</a></h3>
                                <div>@sh.Address</div>
                                <div class="mt-2 text-dark">@sh.Description</div>

                                <a href="@Url.ShoppingCenter(sh.TypeName, sh.TypeId, sh.Name, sh.Id)" class="shopping-center-more">
                                    <span>
                                        <i class="fal fa-angle-left"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
    else
    {
        <p class="text-center">
            مرکز خرید جهت نمایش وجود ندارد
        </p>
    }

</div>