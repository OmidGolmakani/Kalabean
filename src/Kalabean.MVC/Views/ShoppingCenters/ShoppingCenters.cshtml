@{
    ViewData["Title"] = "مجتمع های تجاری";
}
@model List<ShoppingCenterViewModel>

<section class="py-2">
    <div class="shopping-center-banner">
        <!--<img src="images/temp/ShoppingCenter.png"  class="w-100 img-fluid"/>-->
    </div>
</section>

<div class="container-fluid">
    @if (Model != null && Model.Count > 0)
    {
        <section class="py-5">
            <div class="--container">
                <div class="row offset-md-1">

                    <div class="col-12 col-md-2 col-sm-6 my-2">
                        <div class="text-center">
                            <a href="#" class="shopping-center-a">
                                <span><i class="fa fa-check"></i></span>
                                همه
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-2 col-sm-6 my-2">
                        <div class="text-center">
                            <a href="#" class="shopping-center-a">
                                <span><i class="fa fa-check"></i></span>
                                بازارها
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-2 col-sm-6 my-2">
                        <div class="text-center">
                            <a href="#" class="shopping-center-a">
                                <span><i class="fa fa-check"></i></span>
                                مجتمع تجاری
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-2 col-sm-6 my-2">
                        <div class="text-center">
                            <a href="#" class="shopping-center-a">
                                <span><i class="fa fa-check"></i></span>
                                فروشگاه زنجیره ای
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-2 col-sm-6 my-2">
                        <div class="text-center">
                            <a href="#" class="shopping-center-a">
                                <span><i class="fa fa-check"></i></span>
                                برترین ها
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <section class="py-2">
            <div class="row">
                @foreach (ShoppingCenterViewModel sh in Model)
                {
                    <div class="col-12 col-md-4">
                        <div class="item-cat-prod shopping-center-div">
                            <figure class="position-relative">
                                <a href="@Url.StoresByShoppingCenter(sh.TypeName, sh.TypeId, sh.Name, sh.Id)">
                                    <img src="@sh.ImagePath" class="rounded-top img-fluid w-100" />
                                    <div class="store-number">
                                        <span class="Count">@sh.StoresCount</span>
                                        <span class="store-name">فروشگاه</span>
                                    </div>
                                </a>
                            </figure>
                            <div class="p-3 position-relative">
                                <h3><a href="#" class="border-0 pb-0">@sh.Name</a></h3>
                                <div>@sh.Address</div>
                                <div class="mt-2 text-dark">@sh.Description</div>

                                <a href="#" class="shopping-center-more">
                                    <span>
                                        <i class="fal fa-angle-left"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
    else {
        <p class="text-center" >
            مرکز خرید جهت نمایش وجود ندارد
        </p>
    }

</div>